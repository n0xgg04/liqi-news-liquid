{
  "expo": {
    "name": "Liqi News",
    "slug": "nox-liqi-news",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "nox-liqi-news",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.icon",
      "bundleIdentifier": "com.noxinfinity.nox.liqi.news",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "googleServicesFile": "./shared/secrets/GoogleService-Info.plist",
      "entitlements": {
        "aps-environment": "development"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.noxinfinity.nox.liqi.news",
      "googleServicesFile": "./shared/secrets/google-services.json"
    },
    "web": {
      "output": "server"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-video",
      [
        "@hot-updater/react-native",
        {
          "channel": "production"
        }
      ],
      "expo-localization",
      "expo-sqlite",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.207043063139-3mril4bo82bu0a6qe32c5mar9qcn9iv7"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "buildReactNativeFromSource": true
          }
        }
      ],
      [
        "@evennit/notifee-expo-plugin",
        {
          "iosDeploymentTarget": "15.4",
          "apsEnvMode": "development",
          "iosAppGroupId": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you change your profile picture.",
          "cameraPermission": "The app accesses your camera to let you change your profile picture."
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "liqi-news"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "140be6ed-1ff3-4813-a60a-9ea697cdc474"
      }
    }
  }
}
